<h2>Current Genres:</h2>

  <% @show_all = Category.all %>
  <% @show_all.each do |x| %>
    <h3><%= x["id"] %>. <%= x["genre"] %></h3>
        <p class=indent>Products assigned to <%= x["genre"] %>:</p>
        <% @products = Product.all %>
        <% @products.each do |y| %>
          <% if y["category_id"] == x["id"]%>
          <p class=indent-more><%= y["id"] %>. <%= y["title"] %>  by  <%= y["author"] %></p>
          <% end %>
        <% end %>
  <% end %>
    